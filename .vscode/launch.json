  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000/${fileBasenameNoExtension}",
      // "url": "http://localhost:3000/${relativeFileDirname}/${input:chooseArgs}",
      "webRoot": "${workspaceFolder}/docs/",
      "args": [
        "${input:fileContentKey}"
      ],
    }
  ],
  "inputs": [
    {
      "id": "chooseArgs",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "calculation.py": "-n 4224",
        "client.py": "-i calc-out.yaml"
      }
    }
  ]
}